{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "paths": {
            "@components": ["components"],
            "@components/*": ["components/*"],
            "@Lib": ["components/Lib"],
            "@pages/*": ["pages/*"],
            "@routes": ["routes"],
            "@routes/*": ["routes/*"],
            "@store": ["store"],
            "@store/*": ["store/*"],
            "@constant": ["constant"],
            "@constant/*": ["constant/*"],
            "@utils": ["utils"],
            "@utils/*": ["utils/*"],
            "@test-utils": ["utils/test-utils"],
            "@theme": ["theme"],
            "@theme/*": ["theme/*"]
        },

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src", "vitest/globals"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
